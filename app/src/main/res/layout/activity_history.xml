<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    tools:context=".Controllers.Activities.HistoryActivity">

    <RelativeLayout
        android:id="@+id/layout_7_days"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textview_7_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageview_7_days"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textview_7_days"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_comment_black_48px"
            android:contentDescription="@string/descript_comment_icon"
            android:visibility="invisible" />

    </RelativeLayout>

