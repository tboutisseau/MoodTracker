<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controllers.Activities.MainActivity">

    <com.tboutisseau.moodtracker.Views.VerticalViewPager
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_comment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_margin="16dp"
        android:background="@null"
        android:elevation="0dp"
        android:src="@drawable/ic_note_add_black"
        app:backgroundTint="@android:color/transparent"
        app:elevation="0dp"
        app:fabSize="auto"
        app:maxImageSize="56dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/open_history_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:background="@null"
        android:elevation="0dp"
        android:src="@drawable/ic_history_black"
        app:backgroundTint="@android:color/transparent"
        app:elevation="0dp"
        app:fabSize="auto"
        app:maxImageSize="56dp" />


</FrameLayout>